          top:130
      });

  var r_2 = Titanium.UI.createLabel({
          text:'----------',
          left:130,
          font:{fontSize:30},
          width:'auto',
          height:'auto',
          top:180
      });

  var r_3 = Titanium.UI.createLabel({
          text:'----------',
