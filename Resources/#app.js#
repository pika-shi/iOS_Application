// ’¥ì’¥³’¡¼’¥É’¥Ü’¥¿’¥ó’¥¯’¥ê’¥Ã’¥¯’»þ
r_button.addEventListener('click', function()
{
  var win = Titanium.UI.createWindow({
          height:0,
          backgroundColor:'#eaf',
          bottom:0
      });

  // ’¥¢’¥Ë’¥á’¡¼’¥·’¥ç’¥ó
  var anime = Titanium.UI.createAnimation();
  anime.height = 500;
  anime.duration = 300;

