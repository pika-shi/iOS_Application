      });

  var n_4 = Titanium.UI.createLabel({
          text:'4.',
          left:76,
          font:{fontSize:30},
          width:'auto',
          height:'auto',
          top:280
      });

  var n_5 = Titanium.UI.createLabel({
          text:'5.',
          left:76,
          font:{fontSize:30},
          width:'auto',
          height:'auto',
          top:330
      });

  // ’¥¿’¥¤’¥à’¥é’¥Ù’¥ë
  var r_1 = Titanium.UI.createLabel({
          text:'----------',
          left:130,
          font:{fontSize:30},
          width:'auto',
